# Database Configuration
POSTGRES_USER=teletable
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=teletable_db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_minimum_32_characters_long
JWT_EXPIRY_HOURS=24

# Backend Configuration
BACKEND_PORT=3003
SERVER_ADDRESS=0.0.0.0:3003

# Logging
RUST_LOG=info

# Database URL (constructed from above variables)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis URL (constructed from above variables)
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:${REDIS_PORT}
